#include "embedding.hpp"
#include <iostream>

int main() {
    try {
        std::string api_key = "YOUR_COHERE_API_KEY";
        ai::Embedder embedder(api_key);

        std::string cv_text = ai::load_file_text("data/sample_cv.txt");
        std::vector<float> embedding = embedder.generate_embedding(cv_text);

        std::cout << "Embedding generated: size = " << embedding.size() << "\n";
        std::cout << "Preview: ";
        for (int i = 0; i < 5 && i < embedding.size(); ++i) {
            std::cout << embedding[i] << " ";
        }
        std::cout << std::endl;

    } catch (const std::exception& e) {
        std::cerr << "Error: " << e.what() << "\n";
    }
}
